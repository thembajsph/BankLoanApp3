@model BankLoanApp3.ViewModels.HomeLoanApplicationViewModel

@{
    ViewData["Title"] = "Edit Loan Application";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- Success and Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Validation Summary -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <!-- Card for form display -->
    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <!-- Hidden Fields -->
                <div class="form-group d-none">
                    <label asp-for="UserFirstName"></label>
                    <input asp-for="UserFirstName" class="form-control" readonly />
                    <span asp-validation-for="UserFirstName" class="text-danger"></span>
                </div>

                <div class="form-group d-none">
                    <label asp-for="UserLastName"></label>
                    <input asp-for="UserLastName" class="form-control" readonly />
                    <span asp-validation-for="UserLastName" class="text-danger"></span>
                </div>

                <div class="form-group d-none">
                    <label asp-for="ApplicationUserId"></label>
                    <input asp-for="ApplicationUserId" class="form-control" readonly />
                    <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
                </div>

                <!-- Editable Fields -->
                <div class="form-group">
                    <label asp-for="GrossSalary" class="control-label"></label>
                    <input asp-for="GrossSalary" class="form-control" />
                    <span asp-validation-for="GrossSalary" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CreditScore" class="control-label"></label>
                    <input asp-for="CreditScore" class="form-control" />
                    <span asp-validation-for="CreditScore" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PurchasePrice" class="control-label"></label>
                    <input asp-for="PurchasePrice" class="form-control" />
                    <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MaxInstallment" class="control-label"></label>
                    <input asp-for="MaxInstallment" class="form-control" />
                    <span asp-validation-for="MaxInstallment" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LoanPercentage" class="control-label"></label>
                    <input asp-for="LoanPercentage" class="form-control" />
                    <span asp-validation-for="LoanPercentage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DepositRequired" class="control-label"></label>
                    <input asp-for="DepositRequired" class="form-control" />
                    <span asp-validation-for="DepositRequired" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewInstallment" class="control-label"></label>
                    <input asp-for="NewInstallment" class="form-control" />
                    <span asp-validation-for="NewInstallment" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LoanStatus" class="control-label"></label>
                    <input asp-for="LoanStatus" class="form-control" />
                    <span asp-validation-for="LoanStatus" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-controller="HomeLoan" asp-action="Index" class="btn btn-secondary">Return</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
